@inherits CANDatabaseListBase
@using CANAdmin.Shared.Models

<div class="container mb-1">
    <div class="card">
        <div class="row p-2 mh-50">
            <div class="col-4"></div>
            <div class="col-3 align-self-center">
                <strong>CAN Database List</strong>
            </div>
            <div class="col-1 align-self-center">
                <button @onclick="RefreshCANDatabases" class="btn btn-primary">Refresh</button>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</div>

@if (CANDatabases == null)
{
    <p><em>Loading CAN Databases...</em></p>
}
else
{
    <div class="container">
        @foreach (CANDatabaseView canDatabase in CANDatabases)
        {
            <CANDatabase canDatabase="canDatabase" DeleteWarningEventCallback="@DeleteWarning"></CANDatabase>
        }
    </div>
}
