@inherits WarningDialogBase

@if (IsDialogVisible)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Warning</h5>
                    <button type="button" @onclick="HideDialog" class="close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete CAN Database <strong>@CANDatabase.Name</strong> that was uploaded on <strong>@CANDatabase.Date</strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" @onclick="Delete" class="btn btn-primary">Delete</button>
                    <button type="button" @onclick="HideDialog" class="btn btn-secondary">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}